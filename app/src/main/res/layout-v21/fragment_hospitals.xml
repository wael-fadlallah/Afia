            android:layout_height="wrap_content"
            android:text="@string/hospitals"
            android:textSize="26sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            />

</FrameLayout>

